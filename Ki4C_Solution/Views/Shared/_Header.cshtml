    const NoBtn = document.querySelector('#NoBtn');
    function modalOpen() {
        event.preventDefault();
        modal.classList.remove("hidden")
    }
    function roadData() {
        modal.classList.add("hidden")
        // 데이터 로드하고 자가진단 사이트 이동
    }
    function noRoadData() {
        modal.classList.add("hidden")
