@{
    // Used Table [Member]
    //메인 - 로그인 - 비밀번호 찾기 - 비밀번호찾기입력화면
    ViewData["Title"] = "Find Id Input Page";
    @model Ki4C_Solution.Models.Common.Auth.CreateAccountModel;
}
<style>
    .btnType1 {
        font-size: 12px;
        font-weight: 600;
        color: white;
        background-color: #34B0C7;
        border: none;
        width: 80px;
        height: 25px;
        border-radius: 20px;
    }

        .btnType1:hover {
            background-color: #2B92D5;
            color: white;
        }

        .btnType1:active {
            background-color: #34E9F9;
            color: white;
        }

    .inputType1 {
        width: 100px;
        height: 45px;
        border: solid 0.5px #2B92D5;
        border-radius: 10px;
        padding: 10px;
    }

    #findParagraph {
        width: 50%;
        padding-left: 100px;
        margin: 0 auto;
        text-align: left;
        font-size: 12px;
    }
    /* 화면 너비 0 ~ 768px */
    @@media (max-width: 768px) {
        #findParagraph {
            width: 65%;
            padding-right: 100px;
        }
    }
</style>
<section>
    <!-- 콘텐츠 -->
    <div id="wrap">
        <h2>비밀번호 찾기</h2>
        <div id="menuIdx">
            <div style="float: left;">
                <img id=home_img src="~/images/home-1.png">
            </div>
            <a href="#">Home</a>
            &gt;
            비밀번호 찾기
        </div>
        <br>
        <hr style="border: solid 0.5px black; width: 100%;" />
        <!-- 비밀번호 찾기 -->
        <div class="contents" style="margin: 0 auto;">
            <div style="text-align: center; padding-right: 50px;">
                <br>
                <h1 style="padding-right: 100px;">비밀번호 찾기</h1>
                <a style="font-size: 12px;">비밀번호를 찾기 위해 아래 정보를 입력해주세요.</a> <br> <br>
                <form asp-controller="CommonAuth" asp-action="FindPassword" method="post" id="Login-form">
                    <a>아이디 </a>
                    <div style="padding-top: 10px; display: inline-block;">
                        <input class="inputType1" type="text" placeholder="아이디를 입력해주세요."
                               style="max-width: 400px; width: 130%; height: 30px; font-size: 16px;
                                margin-bottom: 3px;"
                               onfocus="this.value='';" id="Input_Id" /> <br>
                    </div>
                    <br>
                    <a>이메일 </a>
                    <div style="padding-top: 10px; display: inline-block;">
                        <input class="inputType1" type="text" placeholder="이메일을 입력해주세요."
                               style="max-width: 400px; width: 130%; height: 30px; font-size: 16px;
                                margin-bottom: 3px;"
                               onfocus="this.value='';" id="Input_Email" /><br>
                    </div>
                </form>
                <div style="padding-left: 90px; padding-top: 20px;">
                    <a href="#" style="display: inline-block;">
                        <input class="btnType1" id="find-button" type="submit" value="비밀번호 찾기" onclick="FindPassInputJS.submitBtnClick();" />
                    </a>
                    <a style="display: inline-block;" asp-area="" asp-controller="CommonAuth" asp-action="Login">
                        <input class="btnType1" id="cancle-button" type="submit" value="취소" />
                    </a>
                </div>
            </div>
            <br> <br>
            <div style="display: flex;">
                <div id="findParagraph">
                    아이디가 기억나지 않으실 때는
                    <a href="/common/auth/FindIdInput.html" style="display: inline-block;">
                        <input class="btnType1" type="button" value="아이디 찾기" />
                    </a>
                    <p>
                        이메일이 기억나지 않거나, 문의가 필요하시면 OOO@OOO.com 또는 02)2088-5953 으로 문의바랍니다.
                    </p>
                </div>
            </div>
        </div>
        <br> <br> <br>
        <!-- 아이디 찾기 -->
    </div>
    <!-- 콘텐츠 -->
</section>

<script>
    let FindPassInputJS = {
        init: function () {
            this.setEvent();
        },
        setEvent: function () {
            $('#Login-form').submit(function (e) {
                e.preventDefault();
                let id = $('#Input_Id').val();
                let email = $('#Input_Email').val();
                //let phone = $('#Input_Phone').val();
                if (FindPassInputJS.isEmpty(id)) {
                    alert('아이디를 입력해주세요.');
                    return;
                }
                if (FindPassInputJS.isEmpty(email)) {
                    alert('이메일을 입력해주세요.');
                    return;
                }
                //if (FindPassInputJS.isEmpty(phone)) {
                //    alert('휴대폰 번호를 입력해주세요.');
                //    return;
                //}
                this.submit();
            });
        },
        isEmpty: function (value) {
            if (value == null || value == undefined || value == "") {
                return true;
            } else {
                return false;
            }
        },
        submitBtnClick: function () {
            $('#Login-form').submit();
        }
    }

    $(document).ready(function () {
        FindPassInputJS.init();
    });

</script>
