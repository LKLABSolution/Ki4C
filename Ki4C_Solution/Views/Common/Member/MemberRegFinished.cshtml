@{
    // Used Table [Member]
    // 회원관리 - 가입
    Layout = "~/Views/Shared/_LayoutKi4C.cshtml";
    ViewData["Title"] = "MemberRegFinished Page";
}
<style>
    /*member_step*/
    .member_step {
        height: 65px;
        margin-top: 30px;
        border: 1px solid #c1c1c1;
        background: #f4f4f4;
    }

    .member_step span {
        display: block;
        float: left;
        line-height: 65px;
        text-indent: 80px;
        text-align: center;
        color: #cecece;
        font-size: 18px;
        padding-right: 65px;
    }

    .member_step span.current {
        font-weight: 700;
        color: #000;
        background: #fff;
        width: 217px;
    }
    /* MemberRegFinished.html */
    #box-form {
        width: 400px; height: 200px;
        text-align: center; padding: 50px;
    }
    #home-button{
        font-size: 16px; font-weight: 600;
        background-color: black;
        color: white;
        border: none;
        width: 130px; height: 40px;
    }

    /* MemberRegFinished.html */
    @@media (max-width: 768px){
        .member_step {
            display: none;
        }
        #box-form {
            width: 70%;
        }
    }
</style>
<section>
    <!-- 콘텐츠 -->
    <div id="wrap">
        <h2>회원가입</h2>
        <div style="float: right;">
            <div id=home_img style="float: left;">
                <img style="width: 25px; height: 25px; padding-right: 3px;" src="~/images/home-1.png">
            </div>
            <a href="#">Home</a>
            &gt;
            회원가입
        </div>
        <br>
        <hr style="border: solid 0.5px black; width: 100%;" />
        <!-- 회원가입 완료 -->
        <div class="contents" style="display: flex;
                flex-direction: column; align-items: center;">
            <div style="width: 80%;">
                <br>
                <div class="member_step">
                    <span>약관 및 개인정보취급방침 동의</span>
                    <span>회원 기본정보 입력</span>
                    <span class="current">가입 완료</span>
                </div>
            </div>
            <div id="box-form">
                <!-- 이미지 -->
                <div style="margin-top: 30px;">
                    <img style="width: 30%; height: calc (width*1.3);" src="~/images/personCheck.png">
                </div>
                <!-- 이미지 -->
                <p style="font-weight: bold;">Ki4C 가입을 환영합니다.</p>
                가입하신 계정으로 Ki4C 모든 서비스를 이용하실 수 있습니다.
            </div>
            <div class="contents" style="display: flex; justify-content: center;
                        padding-top: 30px;">
                <button id="home-button" type="button">
                    <a class="text-primary" asp-area="" asp-controller="Home" asp-action="Index">
                        홈으로
                    </a>
                </button>
            </div>
        </div>
        <!-- 회원가입 완료 -->
    </div>
    <!-- 콘텐츠 -->
</section>

