            </div>
        </div>
    </div>

    <script>
        let IndexJS = {
            init: function () {
                this.bindEvent();
            },
            bindEvent: function () {
                $(".btn-login").on("click", function () {
                    let id = $("#id").val();
                    let pw = $("#pw").val();

                    if (IndexJS.isEmpty(id)) {
                        alert("아이디를 입력해주세요.");
                        return;
                    }

                    if (IndexJS.isEmpty(pw)) {
                        alert("비밀번호를 입력해주세요.");
                        return;
                    }

                    $("#loginForm").submit();
                });
            },
            isEmpty: function (value) {
                if (value == null || value == undefined || value == "") {
                    return true;
                } else {
                    return false;
                }
            },
        }

        $(document).ready(function () {
            IndexJS.init();
            if ($("#ValidateMessage").text() != "") {
                $('#loginSuccessModal').modal('show');
            }
        });

        $(".btn-close, .closeBtn").click(function () {
            $('#loginSuccessModal').modal('hide');
        });
    </script>
